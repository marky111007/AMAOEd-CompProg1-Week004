#include <iostream>
#include <string> 
using namespace std;

int call_count = 0;

void callfunction() {
    cout << "The function has been called..." << endl;
    ++call_count;
}

int main() {    
    for (int i = 0; i < 10; i++)
        callfunction();

    cout << endl << "Total functions invoked: "<< call_count;
}                  
